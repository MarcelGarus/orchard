{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "grass",
  "scopeName": "source.grass",
  "fileTypes": ["grass"],
  "patterns": [{ "include": "#all" }],
  "repository": {
    "all": {
      "patterns": [
        {
          "name": "keyword",
          "match": "\\b(\\:|\\;)\\b"
        },
        {
          "name": "comment.line",
          "match": "\\## (.*)$",
          "captures": {
            "1": {
              "name": "markup.bold"
            }
          }
        },
        {
          "name": "comment.line",
          "begin": "\\#",
          "end": "$",
          "patterns": [
            {
              "match": "\\bTODO\\b:?",
              "name": "keyword.todo"
            }
          ]
        },
        {
          "name": "entity.name.function",
          "match": "\\@\\S*"
        },
        {
          "name": "entity.name.method",
          "match": "\\^\\S*"
        }
      ]
    }
  }
}
