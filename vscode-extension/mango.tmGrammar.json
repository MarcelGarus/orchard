{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "mango",
  "scopeName": "source.mango",
  "fileTypes": ["mango"],
  "patterns": [{ "include": "#all" }],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line",
          "match": "\\## (.*)$",
          "captures": {
            "1": {
              "name": "markup.bold"
            }
          }
        },
        {
          "name": "comment.line",
          "begin": "\\#",
          "end": "$",
          "patterns": [
            {
              "match": "\\bTODO\\b:?",
              "name": "keyword.todo"
            }
          ]
        }
      ]
    },
    "all": {
      "patterns": [
        {
          "name": "keyword",
          "match": "\\b(import|with|use|fun|fallback|var|struct|enum|opaque|byte big|bytes big|byte aligned|bytes aligned)\\b"
        },
        {
          "name": "keyword.control",
          "match": "\\b(if|then|else|switch|default|and|or|orelse|loop|for|in|do|break|continue|return|try)\\b"
        },
        {
          "name": "keyword.control",
          "match": "case\\s+([a-zA-Z_0-9]*)",
          "captures": {
            "1": {
              "name": "emphasis"
            }
          }
        },
        {
          "name": "keyword.control",
          "match": "is\\s+([a-zA-Z_0-9]*)",
          "captures": {
            "1": {
              "name": "emphasis"
            }
          }
        },
        {
          "name": "keyword.operator",
          "match": "[%!~@^`/&*+$-<>=.]"
        },
        {
          "begin": "(ground) {",
          "end": "}",
          "captures": {
            "1": { "name": "keyword" }
          },
          "patterns": [{ "include": "#ground" }]
        },
        { "include": "#comments" },
        {
          "name": "string.quoted.double",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "begin": "{",
              "end": "}",
              "patterns": [{ "include": "#all" }]
            },
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "constant.numeric",
          "match": "[0-9]+#[0-9a-fA-F]*"
        },
        {
          "name": "constant.numeric",
          "match": "\\b[0-9][0-9_]*\\b"
        },
        {
          "name": "string.char",
          "match": "#."
        },
        {
          "name": "entity.name.function",
          "match": "([a-z][a-zA-Z_0-9]*)(?=\\s*(\\(|\\[))"
        },
        {
          "name": "entity.name.type",
          "match": "\\b[A-Z][a-zA-Z_0-9]*\\b"
        },
        {
          "name": "variable",
          "match": "\\b[a-z][a-zA-Z_0-9]*\\b"
        }
      ]
    },
    "ground": {
      "patterns": [
        { "include": "#comments" },
        {
          "name": "entity.name.function",
          "match": "\\b[a-zA-Z\\._][a-zA-Z\\._0-9]*\\b"
        }
      ]
    }
  }
}
